<odoo>
    <record id="view_payment_provider_form" model="ir.ui.view">
        <field name="name">payment.provider.form.negdi</field>
        <field name="model">payment.provider</field>
        <field name="inherit_id" ref="payment.payment_provider_form"/>
        <field name="arch" type="xml">
            <group name="provider_credentials" position='inside'>
                <group attrs="{'invisible': [('code', '!=', 'negdi'), ('state', '!=', 'enabled')]}">
                    <field name="negdi_terminal_id" attrs="{'required':[('code', '=', 'negdi'), ('state', '=', 'enabled')]}"/>
                    <field name="negdi_username" attrs="{'required':[('code', '=', 'negdi'), ('state', '=', 'enabled')]}"/>
                    <field name="negdi_password" attrs="{'required':[('code', '=', 'negdi'), ('state', '=', 'enabled')]}" password="True"/>
                    <field name="negdi_return_url" attrs="{'required':[('code', '=', 'negdi'), ('state', '=', 'enabled')]}"/>
                    <field name="negdi_api_url" attrs="{'required':[('code', '=', 'negdi'), ('state', '=', 'enabled')]}"/>
                </group>
                <group attrs="{'invisible': [('code', '!=', 'negdi'), ('state', '!=', 'test_mode')]}">
                    <field name="negdi_test_terminal_id" attrs="{'required':[('code', '=', 'negdi'), ('state', '=', 'test_mode')]}"/>
                    <field name="negdi_test_username" attrs="{'required':[('code', '=', 'negdi'), ('state', '=', 'test_mode')]}"/>
                    <field name="negdi_test_password" attrs="{'required':[('code', '=', 'negdi'), ('state', '=', 'test_mode')]}" password="True"/>
                    <field name="negdi_test_return_url" attrs="{'required':[('code', '=', 'negdi'), ('state', '=', 'test_mode')]}"/>
                    <field name="negdi_test_api_url" attrs="{'required':[('code', '=', 'negdi'), ('state', '=', 'test_mode')]}"/>
                </group>
            </group>
        </field>
    </record>
</odoo>