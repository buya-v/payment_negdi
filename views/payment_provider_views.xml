<odoo>
    <data>
        <record id="payment_provider_form_negdi" model="ir.ui.view">
            <field name="name">NEGDi Provider Form</field>
            <field name="model">payment.provider</field>
            <field name="inherit_id" ref="payment.payment_provider_form"/>
            <field name="arch" type="xml">
                <group name="provider_credentials" position='inside'>
                    <group invisible="code != 'negdi'">
                        <field name="negdi_terminal_id" required="code == 'negdi' and state != 'disabled'"/>
                        <field name="negdi_username" required="code == 'negdi' and state != 'disabled'"/>
                        <field name="negdi_password" required="code == 'negdi' and state != 'disabled'" password="True"/>
                        <field name="negdi_public_key" required="code == 'negdi' and state != 'disabled'"/>
                        
                    </group>
                </group>
            </field>
        </record>
    </data>
</odoo>